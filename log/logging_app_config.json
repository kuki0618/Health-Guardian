{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "json": {
            "()": "pythonjsonlogger.jsonlogger.JsonFormatter",
            "format": "%(asctime)s %(levelname)s %(name)s %(message)s %(filename)s %(lineno)d"
        },
        "detailed": {
            "format": "%(asctime)s [%(levelname)8s] %(name)15s:%(lineno)3d - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "level": "INFO",
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        },
        "file_info": {
            "level": "INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "filename": "logs/app_info.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf8"
        },
        "file_debug": {
            "level": "DEBUG",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "detailed",
            "filename": "logs/app_debug.log",
            "maxBytes": 10485760,
            "backupCount": 3,
            "encoding": "utf8"
        },
        "file_error": {
            "level": "ERROR",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "json",
            "filename": "logs/app_error.log",
            "maxBytes": 5242880,
            "backupCount": 10,
            "encoding": "utf8"
        }
    },
    "loggers": {
        "app": {
            "handlers": [
                "console",
                "file_info",
                "file_debug",
                "file_error"
            ],
            "level": "DEBUG",
            "propagate": false
        },
        "app.database": {
            "handlers": [
                "file_info",
                "file_debug"
            ],
            "level": "INFO",
            "propagate": false
        },
        "app.api": {
            "handlers": [
                "console",
                "file_info",
                "file_error"
            ],
            "level": "INFO",
            "propagate": false
        }
    },
    "root": {
        "handlers": [
            "console",
            "file_error"
        ],
        "level": "WARNING"
    }
}